VERSIONTAG=v1.2.0
VER="BackToMac $VERSIONTAG"

SCRIPTPATH="$( cd "$(dirname "$0")" >/dev/null 2>&1 ; pwd -P )"

echo ""
echo ""
echo "This script will install BackToMac."
echo "BackToMac doesn't have any dependencies."
echo "If this script installs anything else other than BackToMac,it has been"
echo "modified externally.In that case,do not run it,first check it's source"
echo "code!"
echo ""
echo "Total installation size :		1.4MiB"
echo ""
read -r -p ":: Proceed with installation? [Y/n] " input

case $input in
    [yY][eE][sS]|[yY])
	echo "Current path : $SCRIPTPATH"
	echo ""
	echo ":: Installing..."
	echo "(1/3) Creating dir..."
	mkdir /opt/BackToMac/

	echo "(2/3)Moving jar and executable..."
	cp -avr $SCRIPTPATH/BackToMac.jar /opt/BackToMac/BackToMac.jar
	cp -avr $SCRIPTPATH/backtomac /bin/backtomac

	echo "(3/3)Making backtomac executable..."
	chmod +x /bin/backtomac
	echo ""
	echo ":: Setup finished successfully!"
	;;
    *)
 	exit 1
 	;;
esac
